.login-view {
    -fx-background-color: #34495e;
    -fx-background-radius: 10px;
    -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 10, 0, 0, 4);
    -fx-padding: 40px;
    -fx-max-width: 300px;
    -fx-max-height: 400px;
    -fx-border-radius: 10px;
}

.title-label {
    -fx-font-size: 28px;
    -fx-text-fill: #ecf0f1;
    -fx-font-weight: bold;
}

.text-field, .password-field {
    -fx-background-radius: 5px;
    -fx-background-color: #ecf0f1;
    -fx-padding: 10px;
    -fx-font-size: 14px;
}

.login-button {
    -fx-background-color: #27ae60;
    -fx-text-fill: white;
    -fx-font-weight: bold;
    -fx-background-radius: 5px;
    -fx-padding: 10 20 10 20;
    -fx-cursor: hand;
}

.login-button:hover {
    -fx-background-color: #2ecc71;
}

.message-label {
    -fx-text-fill: #e74c3c;
    -fx-font-size: 12px;
}